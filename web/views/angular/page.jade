
#actionPane
  .action_item
    a(ng-click="openNewItem()")
      img(width=40 height=40 src="images/add_button.png")
  .action_item(ng-show="newpage")
    a(ng-click="savePage()")
      img(width=40 height=40 src="images/save_page.png")

#contentPane

  div(style="float:left;height:80px")
    h1 Page title

  .clear

  notification(message="message")


  p(ng-show="page.items.length == 0") There are no items on this page, add some!


  #gridWrapper(gridster="gridsterOpts")
    div(gridster-item="item" ng-repeat="item in page.items", ng-mouseenter="showButtons=true",ng-mouseleave="showButtons=false", ng-init="showButtons=false")
      div(ng-if="item.regular", ng-class="{0:'itemSize0', 1:'itemSize1', 2:'itemSize2', 3:'itemSize3'}[counter]")
        .itemMeta
          p(style="font-weight:bold") {{item.title}}
          //p(ng-if="counter!=0") {{item.url}}
        .itemActionsWrapper
          .itemImageWrapper
            img.itemImg(ng-src="{{item.images[0].url}}")
            ul.itemButtonsWrapper(ng-show="showButtons")
              li.ButtonWrapper
                button.itemBtn(ng-href="") X
              li.ButtonWrapper
                button.itemBtn(ng-href="", ng-click="click()") T
        .itemDescriptionWrapper
          p hi there. this is some description for test. are you satisfied with what you see here?





