h1 Admin

button(ng-click="deleteAllPages()") Delete all pages

div#adminContent(style="padding:10px")
ul
  li(ng-repeat="page in pages")
    .admin_page(style="border-bottom:1px solid #ccc;padding:4px;margin:5px")
      a(href="http://localhost:3000/#/pages/{{page._id}}" target="_blank") {{page._id}}
      a(href="http://localhost:3000/#/test/{{page._id}}" target="_blank") (test)
      ul
        li(ng-repeat="item in page.items" style="display:block")
          .admin_item(style="height:20px;" ng-mouseenter="showactions=true" ng-mouseleave="showactions=false" ng-class="{selected: showactions==true}")
            .admin_item_actions(ng-show="showactions")
              a(ng-click="deleteItem(page._id,item._id)" target="_blank") 
                img(src="/images/admin_item_delete.png")
            .admin_item_title.truncate
              a(href="{{item.url}}" target="_blank") {{item.title}}

            .clear
            
          
    
            
